	/* 单个角色卡片 */
.role-card.data-v-6c024c73 {
		position: relative;
		display: flex;
		align-items: center;
		background: #fff;
		border-radius: 16rpx;
		padding: 20rpx;
		box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
		overflow: hidden;
		border: 2rpx solid transparent;
}

	/* 三角形背景——尖朝左下，位于右上角 */
.card-active.data-v-6c024c73::before {
		content: "";
		position: absolute;
		top: 0;
		right: 0;
		width: 90rpx;
		/* 三角边长 */
		height: 60rpx;
		background-color: #409eff;
		-webkit-clip-path: polygon(100% 0%,
				/* 顶点：右上 */
				100% 100%,
				/* 底点：右下 */
				0% 0%
				/* 左顶点：左上 */
			);
		        clip-path: polygon(100% 0%,
				/* 顶点：右上 */
				100% 100%,
				/* 底点：右下 */
				0% 0%
				/* 左顶点：左上 */
			);
}

	/* 对勾 */
.card-active.data-v-6c024c73::after {
		content: "当前";
		position: absolute;
		top: 4rpx;
		right: 4rpx;
		font-size: 20rpx;
		/* line-height: 50rpx; */
		color: #fff;
		/* line-height: 2; */
}

